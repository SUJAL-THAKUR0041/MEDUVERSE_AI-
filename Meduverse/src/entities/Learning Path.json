{
  "name": "LearningPath",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "Reference to User entity"
    },
    "title": {
      "type": "string",
      "description": "Learning path title"
    },
    "subject": {
      "type": "string",
      "description": "Subject area"
    },
    "difficulty_level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ],
      "default": "beginner"
    },
    "estimated_hours": {
      "type": "number",
      "description": "Estimated completion time in hours"
    },
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "resources": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "completed": {
            "type": "boolean",
            "default": false
          },
          "completion_date": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "progress_percentage": {
      "type": "number",
      "default": 0,
      "description": "Overall completion percentage"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "ai_generated": {
      "type": "boolean",
      "default": false,
      "description": "Was this path generated by AI"
    }
  },
  "required": [
    "user_id",
    "title",
    "subject"
  ]
}