{
  "name": "Doctor",
  "type": "object",
  "properties": {
    "user_email": {
      "type": "string",
      "description": "Doctor's email (linked to User entity)"
    },
    "full_name": {
      "type": "string",
      "description": "Doctor's full name"
    },
    "specialization": {
      "type": "string",
      "description": "Medical specialization"
    },
    "qualification": {
      "type": "string",
      "description": "Medical qualifications (MBBS, MD, etc.)"
    },
    "experience_years": {
      "type": "number",
      "description": "Years of experience"
    },
    "registration_number": {
      "type": "string",
      "description": "Medical council registration number"
    },
    "hospital_affiliation": {
      "type": "string",
      "description": "Primary hospital affiliation"
    },
    "consultation_fee": {
      "type": "number",
      "description": "Consultation fee"
    },
    "available_days": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Available days of week"
    },
    "available_time_slots": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Available time slots"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Languages spoken"
    },
    "rating": {
      "type": "number",
      "description": "Average rating (0-5)"
    },
    "total_consultations": {
      "type": "number",
      "default": 0,
      "description": "Total consultations completed"
    },
    "is_verified": {
      "type": "boolean",
      "default": false,
      "description": "Verification status"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Active status"
    }
  },
  "required": [
    "user_email",
    "full_name",
    "specialization",
    "qualification",
    "registration_number"
  ]
}